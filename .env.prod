# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# nabavkidata.com
# ===================================

# =================
# DATABASE (AWS RDS)
# =================
# Replace with your AWS RDS PostgreSQL endpoint
DATABASE_URL=postgresql+asyncpg://nabavki_user:CHANGE_THIS_PASSWORD@nabavkidata-db.REGION.rds.amazonaws.com:5432/nabavkidata
POSTGRES_USER=nabavki_user
POSTGRES_PASSWORD=CHANGE_THIS_PASSWORD
POSTGRES_DB=nabavkidata
POSTGRES_HOST=nabavkidata-db.REGION.rds.amazonaws.com
POSTGRES_PORT=5432

# =================
# AUTHENTICATION & SECURITY
# =================
# Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING
JWT_SECRET=CHANGE_THIS_TO_RANDOM_64_CHAR_HEX_STRING
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# =================
# EMAIL (SMTP)
# =================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=noreply@nabavkidata.com
SMTP_PASSWORD=CHANGE_THIS_TO_APP_SPECIFIC_PASSWORD
SMTP_FROM_EMAIL=noreply@nabavkidata.com
SMTP_FROM_NAME=nabavkidata.com
EMAIL_FROM=noreply@nabavkidata.com

# =================
# FRONTEND URL
# =================
FRONTEND_URL=https://nabavkidata.com
NEXT_PUBLIC_APP_URL=https://nabavkidata.com
NEXT_PUBLIC_API_URL=https://api.nabavkidata.com
CORS_ORIGINS=https://nabavkidata.com,https://www.nabavkidata.com,https://api.nabavkidata.com

# =================
# OPENAI API
# =================
OPENAI_API_KEY=sk-CHANGE_THIS_TO_YOUR_OPENAI_API_KEY
OPENAI_MODEL=gpt-4-turbo-preview
EMBEDDING_MODEL=text-embedding-3-small

# =================
# VECTOR DATABASE
# =================
VECTOR_DIMENSION=1536

# =================
# STRIPE PAYMENTS
# =================
STRIPE_SECRET_KEY=sk_live_CHANGE_THIS_TO_YOUR_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_THIS_TO_YOUR_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_CHANGE_THIS_TO_YOUR_STRIPE_WEBHOOK_SECRET
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_CHANGE_THIS_TO_YOUR_STRIPE_PUBLISHABLE_KEY

# =================
# AWS S3 (PDF STORAGE)
# =================
AWS_ACCESS_KEY_ID=CHANGE_THIS_TO_YOUR_AWS_ACCESS_KEY
AWS_SECRET_ACCESS_KEY=CHANGE_THIS_TO_YOUR_AWS_SECRET_KEY
AWS_REGION=eu-central-1
S3_BUCKET_NAME=nabavkidata-pdfs
S3_BUCKET_URL=https://nabavkidata-pdfs.s3.eu-central-1.amazonaws.com

# =================
# RATE LIMITING
# =================
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
PASSWORD_RESET_RATE_LIMIT=3

# =================
# ENVIRONMENT
# =================
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=info

# =================
# SCRAPER CONFIGURATION
# =================
SCRAPER_USER_AGENT=nabavkidata.com Bot/1.0 (+https://nabavkidata.com/about)
SCRAPER_DELAY_SECONDS=2
SCRAPER_MAX_RETRIES=3
SCRAPER_CONCURRENT_REQUESTS=8

# =================
# REDIS (Optional - for caching)
# =================
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@localhost:6379/0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# =================
# MONITORING (Optional)
# =================
SENTRY_DSN=https://CHANGE_THIS@sentry.io/PROJECT_ID
SENTRY_ENVIRONMENT=production

# =================
# DOMAIN CONFIGURATION
# =================
DOMAIN=nabavkidata.com
API_DOMAIN=api.nabavkidata.com
